{
  "name": "@puro/core",
  "version": "0.1.0-alpha15",
  "description": "Puro REST Framework",
  "license": "MIT",
  "author": {
    "name": "Giacomo Trudu aka Wicker25",
    "email": "wicker25@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/puro-framework/puro-core.git"
  },
  "engines": {
    "node": "8"
  },
  "scripts": {
    "build": "tsc -p .",
    "prettify": "prettier --single-quote --write 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "jest",
    "release": "yarn clean && yarn build && ./scripts/publish.sh",
    "clean": "rm -Rf lib/ coverage/",
    "coveralls": "coveralls"
  },
  "jest": {
    "preset": "ts-jest",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/src/testing/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn build && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettify"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "typeorm": "^0.2.9",
    "typescript": "^3.1.6",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/node": "^10.12.5",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/validator": "^9.4.3",
    "coveralls": "^3.0.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "1.15.2",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^23.10.4"
  }
}
