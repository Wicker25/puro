{
  "name": "puro",
  "version": "0.1.0",
  "description": "Puro REST Framework",
  "license": "MIT",
  "main": "./lib/index.js",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "build": "tsc -p .",
    "prettify": "prettier --single-quote --write 'src/**/*.ts' 'plugins/**/*.ts' 'testing/**/*.ts'",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/testing/"
    ],
    "moduleNameMapper": {
      "^@puro/(.*)$": "<rootDir>/src/$1",
      "^@plugins/(.*)$": "<rootDir>/plugins/$1",
      "^@testing/(.*)$": "<rootDir>/testing/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn build && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn prettify"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "typeorm": "^0.2.9",
    "typescript": "^3.1.6",
    "validator": "^10.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.5",
    "@types/validator": "^9.4.3",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lint-staged": "^8.0.4",
    "prettier": "1.15.2",
    "reflect-metadata": "^0.1.12",
    "ts-jest": "^23.10.4",
    "tsconfig-paths": "^3.7.0"
  }
}
