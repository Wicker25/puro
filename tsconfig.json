{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": ".",
    "outDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "plugins/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "plugins/**/*.spec.ts"
  ]
}
